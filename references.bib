	author = {Pechlivanidis, Ilias G. and Du, Yiheng and Bennett, James and Boucher, Marie-Amélie and Chang, Annie Y. Y. and Slater, Louise and Crochemore, Louise and Dasgupta, Antara and Baldassarre, Giuliano Di and Luterbacher, Jürg and Pappenberger, Florian and Ramos, Maria-Helena and Uhlenbrook, Stefan and Wetterhall, Fredrik and Wood, Andrew and Lavado-Casimiro, Waldo and Yoshimura, Kei and Imhoff, Ruben and Oevelen, Peter J. van and Cantone, Carolina and Cattoën, Céline and Pimentel, Rafael and Werner, Micha},
	year = {2025},
