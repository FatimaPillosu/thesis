@article{Tapiador_2019,
	title = {Is {Precipitation} a {Good} {Metric} for {Model} {Performance}?},
	volume = {100},
	doi = {10.1175/BAMS-D-17-0218.1},
	abstract = {Precipitation has often been used to gauge the performances of numerical weather and climate models, sometimes together with other variables such as temperature, humidity, geopotential, and clouds. Precipitation, however, is singular in that it can present a high spatial variability and probably the sharpest gradients among all meteorological fields. Moreover, its quantitative measurement is plagued with difficulties, and there are even notable differences among different reference datasets. Several additional issues sometimes lead to questions about its usefulness in model validation. This essay discusses the use of precipitation for model verification and validation and the crucial role of highly precise and reliable satellite estimates, such as those from NASA’s Global Precipitation Mission Core Observatory.},
